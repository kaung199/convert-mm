{
    "name": "hakhant/convert-mm",
    "description": "Myanmar date and nrc number converter",
    "keywords": [
        "hakhant",
        "convert-mm"
    ],
    "homepage": "https://github.com/hakhant/convert-mm",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Htet Aung Khant",
            "email": "info@hakhant.tech",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "illuminate/support": "^7.0 ||^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "pestphp/pest": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Hakhant\\Converter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hakhant\\Converter\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Hakhant\\Converter\\ConvertServiceProvider"
            ],
            "aliases": {
                "Convert": "Hakhant\\Converter\\Convert"
            }
        }
    }
}
